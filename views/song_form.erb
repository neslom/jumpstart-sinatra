<label for="title">Title:</label>
<input type="text" name="song[title]" value="<%= @song.title %>"/>

<label for="length">Length:</label>
<input type="text" name="song[length]" value="<%= @song.length %>"/>

<label for="released_on">Date(mm/dd/yyyy):</label>
<input type="text" name="song[released_on]" value="<%= @song.released_on.strftime("%m/%d/%Y") if @song.released_on %>"/>

<label for="lyrics">Lyrics:</label>
<textarea name="song[lyrics]"><%= @song.lyrics %></textarea>
<input type="submit" value="Save Song"/>
